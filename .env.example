# Django settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_ADMIN_URL=admin
# Comma-separated list of allowed hosts (use * for all in development)
ALLOWED_HOSTS=*
# Comma-separated list of trusted origins for CSRF (required in production behind reverse proxy)
# Example: CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# Port and IP binding configuration
FRONTEND_PORT=80
BACKEND_PORT=8000
# Bind to specific IPv4 address (default: 0.0.0.0 = all interfaces)
FRONTEND_BIND_IPV4=0.0.0.0
# Bind to specific IPv6 address (default: :: = all interfaces)
FRONTEND_BIND_IPV6=::

# Google Calendar API (optional - for public calendars not needed)
GOOGLE_CALENDAR_API_KEY=
